# env.example - Documentation of required Doppler secrets
# These are NOT loaded from a file. They live in Doppler (project: mani).
# Run: doppler setup --config dev_personal

# ─── Core (required) ─────────────────────────────────────────────────────────
SELF_HOSTED=true
DOMAIN=localhost:3000                    # prod: manifold.mikhailtal.dev
API_ENDPOINT=localhost:8088              # prod: api.manifold.mikhailtal.dev

# ─── PostgreSQL / Supabase ────────────────────────────────────────────────────
POSTGRES_PASSWORD=
JWT_SECRET=                              # min 32 chars
SUPABASE_ANON_KEY=                       # JWT with role=anon
SUPABASE_SERVICE_ROLE_KEY=               # JWT with role=service_role (was SUPABASE_KEY)
SUPABASE_PASSWORD=                       # same as POSTGRES_PASSWORD
SUPABASE_DB_HOST=localhost               # prod (Docker): db
SUPABASE_DB_PORT=5432

# ─── Web (NEXT_PUBLIC_ prefix = available in browser) ─────────────────────────
NEXT_PUBLIC_API_URL=localhost:8088
NEXT_PUBLIC_FIREBASE_ENV=DEV
NEXT_PUBLIC_SUPABASE_URL=http://localhost:8000
NEXT_PUBLIC_SUPABASE_ANON_KEY=           # same as SUPABASE_ANON_KEY

# ─── Firebase ─────────────────────────────────────────────────────────────────
FIREBASE_API_KEY=
FIREBASE_AUTH_DOMAIN=
FIREBASE_PROJECT_ID=                     # same as GOOGLE_CLOUD_PROJECT
FIREBASE_STORAGE_BUCKET=
FIREBASE_MESSAGING_SENDER_ID=
FIREBASE_APP_ID=
GOOGLE_CLOUD_PROJECT=                    # same as FIREBASE_PROJECT_ID

# ─── Optional ────────────────────────────────────────────────────────────────
# ADMIN_IDS=uid1,uid2                   # comma-separated Firebase UIDs
# OPENAI_API_KEY=
# ANTHROPIC_API_KEY=
